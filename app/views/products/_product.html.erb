<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>
  <p>
    <strong>Product Image:</strong>
  </p>
  <p>
    <%= image_tag product.product_image.variant(:medium) if product.product_image.attached? %>
  </p>
</div>
