<p style="color: green"><%= notice %></p>

<%= render @product %>

<div>
  <%= link_to "Edit this product", edit_product_path(@product) %> |
  <%= link_to "Back to products", products_path %>
  <%= button_to "Add to cart this item", {:controller => "carts", :action => "create", :id => @product.id} , method: :post, class: "btn btn-success mt-2" %>
  <%= button_to "Destroy this product", @product, method: :delete, class: "btn btn-danger mt-2" %>
</div>
